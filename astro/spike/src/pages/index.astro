---
import Banner from '../components/Banner.astro';
import RecentBlogs from '../components/RecentBlogs.astro';
import RecentProjects from '../components/RecentProjects.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Inclusive Technology Consulting - Bocoup">
	<Banner/>
	<main>
		<section class="text-gray-600 body-font">
			<div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
			  <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
				<img class="object-cover object-center rounded" alt="hero" src="https://dummyimage.com/720x600">
			  </div>
			  <div class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center">
				<h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">Inclusive Technology
				  <br class="hidden lg:inline-block">Consulting (PRODUCTION)
				</h1>
				<p class="mb-8 leading-relaxed">We partner with tech companies and nonprofits to increase accessibility, inclusion, and justice on and through the web.</p>
				<div class="flex justify-center">
				  <button class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">Our Code of Conduct</button>
				</div>
			  </div>
			</div>
		  </section>
		<RecentProjects/>
		<RecentBlogs amount={3}/>
	</main>
</Layout>
